@model UserSignInVM
<form id="loginForm" method="post" asp-antiforgery="true">

    <div>
        <label>Login:</label><br />
        <input id="login" asp-for="loginOrEmail" placeholder="Login/Email" /><span asp-validation-for="loginOrEmail"></span>
    </div>
    <div>
        <label>Password</label><br />
        <input id="password" asp-for="password" placeholder="Password" /><span asp-validation-for="password"></span>
    </div>
    <button type="submit">Sign In</button>
</form>
<script id="loginScript">

    $(function () {
        $("#loginForm").submit(function (e) {
        e.preventDefault();
            loginAjaxFunc();
    });
    });

</script>@*Ajax login enable script*@


