@model AirTalk.Models.ViewModels.UserSignInVM;
@{
    ViewData["Title"] = "Home Page";
}
<div class="form-group">
    <div>
        <img src="~/images/airTalkLogo.png" class="img-fluid text-center" />
    </div>
    <div>
        <a asp-action="Registration">Registration form</a>
    </div>
    <form asp-action="SignIn">
        <div>
            <div>
            <label>Sign Up</label>
            </div>
            <div> 
            <label for="loginOrEmail">Login:</label><br />
            <input asp-for="loginOrEmail" placeholder="Login/Email" /><span asp-validation-for="loginOrEmail"></span>
            </div>
            <div>
            <label for="password">Password</label><br />
            <input asp-for="password" placeholder="Password" /><span asp-validation-for="password"></span>
            </div>
            <button type="submit" class="btn-toolbar">Sign In</button>
        </div>
    </form>
</div>
@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}